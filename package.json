{
  "name": "sleeper-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Sleeper Fantasy Football API - AI-powered fantasy football analysis with Claude integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "test": "node test.mjs",
    "test:coverage": "c8 --reporter=text --reporter=html node test.mjs",
    "coverage": "npm run test:coverage",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "mcp",
    "sleeper",
    "fantasy football",
    "nfl",
    "claude",
    "ai",
    "model-context-protocol",
    "fantasy-sports",
    "api",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/sleeper-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/sleeper-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sleeper-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "c8": "^10.1.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "sleeper-mcp": "dist/index.js"
  }
}
